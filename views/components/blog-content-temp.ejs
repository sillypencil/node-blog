<div class="post-content">
    <div class="ui grid">
        <div class="four wide column">
            <a class="avatar"
               href="/user?author=<%= blog.author._id %>"
               data-title="<%= blog.author.name %> | <%= ({m: '男', f: '女', x: '保密'})[blog.author.gender] %>"
               data-content="<%= blog.author.bio %>">
                <img class="avatar" src="/immges/userAvatars/<%= blog.author.avatar %>">
            </a>
        </div>

        <div class="eight wide column">
            <div class="ui segment">
                <h3><a href="/blogs/one/<%= blog._id %>"><%= blog.title %></a></h3>
                <pre><%- blog.content %></pre>
                <div>
                    <span class="tag"><%= blog.created_at %></span>
                    <span class="tag right">
            <span>浏览(<%= blog.pv %>)</span>
            <span>留言(<%= blog.commentsCount %>)</span>

                        <% if (user && blog.author._id && user._id.toString() === blog.author._id.toString()) { %>
                        <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/blogs/edit/<%= blog._id %>">编辑</a></div>
                  <div class="item"><a href="/blogs/remove/<%= blog._id %>">删除</a></div>
                </div>
              </div>
                        <% } %>

                    </span>
                </div>
            </div>
        </div>
    </div>
</div>