<article class="am-g blog-entry-article" onclick="turnToArticle('<%= blog._id %>')">
  <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 blog-entry-img">
    <% if (blog.thumbnail) { %>
    <img src="<%= blog.thumbnail %>" alt="" class="am-u-sm-12">
    <% } else { %>
    <img src="/images/default/nopic.jpg" alt="" class="am-u-sm-12">
    <% } %>
  </div>
  <div class="am-u-lg-6 am-u-md-12 am-u-sm-12 blog-entry-text">
    <span><a href="/blogs/one/<%= blog._id %>" class="blog-color"><%= blog.title %></a></span>
    <span> @<%= blog.authorName %> &nbsp;</span>
    <span><%= blog.created_at %></span>
    <%- blog.content  %>
    <p><a href="" class="blog-continue">continue reading</a></p>
  </div>
</article>